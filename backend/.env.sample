# Cloudonix Voice Agent Load Balancer - Environment Configuration

# Application Configuration
APP_NAME=CloudonixVoiceAgentLBS
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=cloudonix_voiceagent_lbs
DB_USERNAME=root
DB_PASSWORD=password

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis

# MinIO Configuration
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=cloudonix-artifacts
MINIO_USE_SSL=false

# ngrok Configuration (DO NOT COMMIT REAL TOKENS)
# Get your token from: https://dashboard.ngrok.com/get-started/your-authtoken
NGROK_AUTH_TOKEN=your_ngrok_auth_token_here
NGROK_REGION=us
NGROK_WEB_UI=true

# Cloudonix Configuration (for development/testing)
CLOUDONIX_API_BASE_URL=https://api.cloudonix.com
CLOUDONIX_API_KEY=your_cloudonix_api_key_here
CLOUDONIX_DOMAIN=your_tenant.cloudonix.com

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_TTL=525600

# Mail Configuration (optional)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Broadcast Configuration
BROADCAST_DRIVER=redis
BROADCAST_CONNECTION=redis

# Queue Configuration
QUEUE_CONNECTION=redis

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Cache Configuration
CACHE_DRIVER=redis

# Logging Configuration
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"